<h1>Listing games <%= @games.count %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Played</th>
      <th>Achievement Count </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= will_paginate %>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.cost %></td>
        <td><%= game.played %></td>
        <td><%= game.achievements.count %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <%= will_paginate %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
